# PostgreSQL Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=evedb
DATABASE_URL=postgresql://user:password@db:5432/evedb

# Redis Configuration
REDIS_URL=redis://redis:6379

# Frontend Configuration
# This should be the full URL to the backend API, accessible from the user's browser.
# For local development with the default docker-compose setup, this is usually correct.
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# Application Logging Level
# Controls the verbosity of the application logs.
# Recommended values: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: API Key for protected endpoints
# Uncomment and set a secure key to protect endpoints like /api/refresh.
# API_KEY=your_secure_api_key

# Optional: Cloudflare Tunnel Token
# Uncomment and set your tunnel token if you are using Cloudflare Tunnels for exposure.
# TUNNEL_TOKEN=your_tunnel_token